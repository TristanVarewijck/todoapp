<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/partials/head'); -%>
</head>
<body class="text-blue-700">
    <%- include('../views/partials/nav'); -%>
    <main>

      <!-- FILTER  -->

      <form action="/books" method="POST">
        <label for="maxPrice" class="form-label" >Boek prijs (max)</label>
        <input type="number"  name="maxPrice" max="100">
      
        <br>
        <label for="maxPages" class="form-label">Boek prijs (max)</label>
        <input type="number" name="maxPages">

        <input type="submit" class="btn btn-primary btn">
      </form>


        <div class="list-container">
        <% allBooks.forEach(function(Book){ %>
        <div class="card">
            <img src="/images/<%= Book.image %>" class="card-img-top" alt="<%= Book.image %>">
            <div class="card-body">
              <h2 class="card-title"><%= Book.title %></h2>
              <p> <span>Auteur:</span> <%= Book.auteur %></p>
              <p> <span>Pages:</span> <%= Book.pages %> pages</p>
              <p> <span>Price:</span> $<%= Book.price %>,-</p>
              <a href="/books/<%= Book._id %>" class="btn btn-primary" style="width:100%;">More information</a>
            </div>
          </div>
        <% }); %>
        </div>
    </main>
    <%- include('../views/partials/footer'); -%>
    
</body>
</html>